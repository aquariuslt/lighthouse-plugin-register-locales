{
  "compilerOptions": {
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noLib": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "module": "commonjs",
    "target": "es6",
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "__tests__", "**/*.test.ts"]
}
